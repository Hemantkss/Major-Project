<% layout("/layouts/boilerplate") %>
<body>

    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
            <h2 style="text-align: center;">Edit Your Listing</h2> <br>
    
            <form method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="md-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" 
                           value="<%= listing.title %>" 
                           name="listing[title]"  
                           class="form-control"
                           required> 

                           <div class="valid-feedback">Title looks Good!</div>
                </div>
            
                <div class="md-3">
                    <label for="description" class="form-label">Discription</label>
                    <textarea class="form-control" 
                              name="listing[description]" required>
                              <%= listing.description %>
                              
                    </textarea>

                    <div class="invalid-feedback">Please enter a short description!</div>
            
                </div>

                <div class="md-3">
                    Original Listing Image <br>
                    <img src="<%= image %>" alt="">
                </div>
            
            
                <div class="md-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input class="form-control" 
                            type="file" 
                            name="listing[image]"
                            >
                </div>
                 
                <div class="row">
                <div class="md-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" 
                            class="form-control" 
                            value="<%= listing.price %>" 
                            name="listing[price]"
                            required>
                            <div class="invalid-feedback">Price should be valid!</div>
                </div> 
               
                <div class="md-3 col-md-8">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" 
                           value="<%= listing.location %>" 
                           name="listing[location]" 
                           class="form-control"
                           required>

                           <div class="invalid-feedback">Location should be valid!</div>
                </div>
            </div>
               
            
                <div class="md-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text"
                           class="form-control" 
                           value="<%= listing.country %>" 
                           name="listing[country]"
                           required>

                           <div class="invalid-feedback">Country should be valid!</div>
                </div>
                <br>
                
                <button class="btn brn-dark edit-btn">Edit</button>
            </form>
        </div>
       
    </div>


    <script src="/js/script.js"></script>
 
</body>
